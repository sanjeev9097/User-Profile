<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-6 col-md-4">
            <div class="card">
                <img src="<%= userImage %>" class="card-img-top" alt="User Image">
                <div class="card-body">
                    <h5 class="card-title"><%= user %></h5>
                    <p class="card-text">Email: <%= userEmail %></p>
                    <p class="card-text">Total Orders: <%= totalOrders %></p>
                    <div class="row">
                        <div class="col">
                            <a href="/users/edit/<%= id %>" class="btn btn-info btn-block">Edit</a>
                        </div>
                        <div class="col">
                            <a href="/users/delete/<%= id %>" class="btn btn-danger btn-block">Delete</a>
                        </div>
                    </div>
                    <div class="col mt-2">
                        <a href="/users/logout" class="btn btn-primary btn-block">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



